@{
    ViewData["Title"] = "Select Vehicle";
}

@model List<Acedrive.Domain.Models.Vehicle>

<form asp-controller="Vehicle" asp-action="VehicleSelection" method="post">
  @Html.AntiForgeryToken()

  <h5>Please Choose Your Preferred Vehicle.</h5><br />

  <table class = "table table-bordered text-center" >
    <thead class = "thead-dark">
      <tr>
        <th>Choose Only One</th>
        <th>Vehicle Manufacturer</th>
        <th>Vehicle Model</th>
        <th>Vehicle Year</th>
      </tr>
    </thead>
    
    <tbody>
      @foreach (var item in Model) {
        <tr>
          <td>
            <input type="radio" name="vid" value="@item.VehicleId" required/>
          </td>
          <td>@item.Manufacturer</td>
          <td>@item.Model</td>
          <td>@item.Year</td>
        </tr>
      }
    </tbody>
  </table>

  <br>
  <button type="submit">Continue to Next Step</button>
  
</form>